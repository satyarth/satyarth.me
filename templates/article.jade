
extends layout

block prepend title
  | #{ page.title + " - "}

block content
  if page.metadata.mathjax
    script(type="text/javascript", src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML")
  if page.metadata.highlight
    link(rel="stylesheet", href="/css/highlight.css")
    script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.9.1/highlight.min.js")
    script="hljs.initHighlightingOnLoad();"
  article.article
    h1=(page.title)
    em=page.metadata.byline
    - tags=page.metadata.tags
    each tag in tags
      a(class='tag', href='/tag/'+tag)=tag.trim()
    hr
    section.content!=typogr(page.html).typogrify()
  hr
  a(href='/#archive')
    p(align='center') ‚Üê Archive
