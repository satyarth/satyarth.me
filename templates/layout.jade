doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto+Condensed' type='text/css')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Crete+Round' type='text/css')
      link(rel='stylesheet', href='/css/main.css')
  body(class=bodyclass)
      div.header-bg  
        header.header
          div.header-wrap
            block header                                      
              h1
                a(href=locals.url) satyarth.me
              p.prompt ls
              p 
                a(href='/') \~ 
                a(href='/#about') about 
                a(href='/#contact') contact 
                a(href='/#archive') archive 
              p.prompt
                span(class="blink") &#9611;
    div#content
      div.content-wrap
        block content
        
    div.footer-bg
      footer.footer