doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(href="//fonts.googleapis.com/css?family=Droid+Serif:400,400italic,700,700italic|Ubuntu+Mono", rel="stylesheet", type="text/css")
      link(rel='stylesheet', href='/css/normalize.css')
      link(rel='stylesheet', href='/css/skeleton.css')
      // thank mr skeltal
      link(rel='stylesheet', href='/css/custom.css')

  body
    div(class='header')
      div(class='container', style='padding: 1em 0 1em 0;')
        div(class='row')
          block header                                    
            p.prompt ls satyarth.me
            p 
              a(href='/#about') about 
              a(href='/#contact') contact 
              a(href='/#archive') archive 
            p.prompt
              span(class="blink") &#9611;
    div(class='container')
      div(class='content')
        block content